.test
    position relative
    width 100%
    height 100vh
    overflow hidden
    +below(800px)
        padding wm(50) wm(20) wm(120)
        height 100%

    &__container
        max-width w(1400)
        width 100%
        height w(760)
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        box-shadow 0px 0px 16px 2px rgb(6, 91, 164)
        background $c-white
        border-radius w(20)
        padding w(60) w(40) w(120)
        +below(800px)
            position relative
            max-width 100%
            top 0%
            left 0%
            transform translate(0%, 0%)
            height wm(1400)
            border-radius wm(20)
            padding wm(25) wm(40) wm(0)

    &__button
        position absolute
        top 100%
        left 50%
        transform translate(-50%, -50%)
        display flex
        flex-direction row
        justify-content center
        align-items center
        width w(190)
        height w(190)
        border-radius 50%
        background-color $c-yellow
        color $c-white
        font-family $ff-IngoStem-Medium
        font-size w(20)
        font-weight 400
        line-height w(28)
        text-align center
        text-transform uppercase
        z-index 1
        cursor pointer
        +below(800px)
            width wm(175)
            height wm(175)
            font-size wm(20)
            line-height wm(28)

    &__bg-img
        position absolute
        bottom w(-3)
        right w(0)
        width w(700)
        img
            width 100%
        +below(800px)
            border-radius wm(20)
            width 100%
            bottom -0.5%
            img
                width 100%
                border-radius wm(20)

    &__wrap
        display flex
        flex-direction row
        +below(800px)
            flex-direction column
            justify-content center
            align-items center

    &__img
        width w(350)
        img
            width 100%
        +below(800px)
            width wm(250)

    &__text
        max-width w(900)
        margin w(70) w(0) w(30) w(30)
        color $c-blue
        font-family $ff-IngoStem-Light
        font-size w(35)
        font-weight 400
        line-height w(40)
        +below(800px)
            max-width 100%
            text-align center
            font-size wm(35)
            line-height wm(40)
            margin wm(45) wm(0) wm(15) wm(0)

    &__author
        margin-left w(30)
        margin-bottom w(40)
        color $c-blue
        font-family $ff-IngoStem-Bold
        font-size w(25)
        font-weight 400
        line-height w(29)
        +below(800px)
            font-size wm(25)
            line-height wm(29)
            margin-left wm(0)
            margin-bottom wm(240)
            text-align center